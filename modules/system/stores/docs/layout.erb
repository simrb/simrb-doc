doctype html
	html

		head
			title = @t[:title]
				meta name="description" content="#{@t[:description]}"
				meta name="keywords" content="#{@t[:keywords]}"
				meta http-equiv="content-type" content="text/html; charset=UFT-8"
				script src="#{_public('/js/jquery-172.js')}" type="text/javascript"
				script src="#{_assets('/#{@et[:name]}/#{@et[:name]}.js')}" type="text/javascript"
				link rel="shortcut icon" href="#{_public(_var(:shortcut_icon, :system))}"
				link rel='stylesheet' type='text/css' href="#{_public("/css/style.css")}"
				link rel='stylesheet' type='text/css' href="#{_assets("/#{@et[:name]}/#{@et[:name]}.css")}"

		body
			#wrap
				#header
					#main_menu
					== _tpl(:_message)
					.clear

				#bodyer
					== yield
					.clear

				#footer
					p = _var(:footer, :#{@et[:name]}_page)
					.clear
